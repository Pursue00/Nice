<Window x:Class="WhiteboardProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WhiteboardProject.UC"
        xmlns:src="clr-namespace:WhiteboardProject.Model"
        xmlns:common="clr-namespace:WhiteboardProject.Common"
        mc:Ignorable="d" WindowState="Maximized"  WindowStartupLocation="CenterScreen" WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gridTop" Background="#0a583e" PreviewMouseLeftButtonDown="gridTop_PreviewMouseLeftButtonDown">
        <uc:DrawingView/>
        <common:ColorfulFollow Visibility="{Binding IsVisibilityColorfulFollow}"/>
        <Border CornerRadius="0,10,0,0"  VerticalAlignment="Bottom" Height="80"
                HorizontalAlignment="Left" BorderBrush="#dddddd" Background="#FFFFFF" Margin="0,0,0,2"
                BorderThickness="1">
            <uc:BottomLeftNavigationBar />
        </Border>
        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,2"
                Background="#FFFFFF" Height="80"
                BorderThickness="1">
            <uc:BottomNavigationBar/>
        </Border>
        <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,2"
                Background="#FFFFFF" Height="80" CornerRadius="10,0,0,0"
                BorderThickness="1">
            <uc:BottomRightNavigationBar/>
        </Border>
    </Grid>
</Window>
