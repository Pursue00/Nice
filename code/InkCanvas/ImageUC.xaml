<UserControl x:Class="BitsOfStuff.ImageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BitsOfStuff"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Border BorderThickness="1" BorderBrush="White" CornerRadius="2" Margin="5">
        <Image x:Name="IMG" Width="240" Height="180" Stretch="UniformToFill" Margin="5"/>
    </Border>
</UserControl>
